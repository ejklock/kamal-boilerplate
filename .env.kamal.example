# Kamal Deploy Configuration
# Copy this file to .env.kamal and customize for your environment

# Application
APP_NAME=my-app
APP_HOST=app.example.com

# Docker Registry
REGISTRY_SERVER=localhost:5555
REGISTRY_USERNAME=my-user
KAMAL_REGISTRY_PASSWORD=your-registry-password-here

# Server
SERVER_IP=192.168.0.1

# SSH Configuration
SSH_USER=root
SSH_PORT=22
SSH_KEY_PATH=~/.ssh/id_rsa

# Database
MYSQL_ROOT_PASSWORD=laravel
MYSQL_DATABASE=laravel
MYSQL_USER=laravel
MYSQL_PASSWORD=laravel
MYSQL_PORT=3306

# Laravel
APP_KEY=
DB_PASSWORD=laravel
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
DB_PORT=${MYSQL_PORT}
DB_HOST=${APP_NAME}-mysql

# Redis/Valkey
REDIS_HOST=${APP_NAME}-redis
REDIS_PORT=6379
REDIS_PASSWORD=null
